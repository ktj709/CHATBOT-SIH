{
    "project": {
        "name": "GyaanSetu",
        "description": "GyaanSetu is a comprehensive education platform developed for Smart India Hackathon (SIH) 2025. It combines traditional e-learning with blockchain-based certificate verification, real-time collaborative whiteboards, and community features to create a complete digital education ecosystem.",
        "tagline": "Bridging the gap in education through technology",
        "version": "2025",
        "type": "Education Technology Platform"
    },
    "architecture": {
        "overview": "Multi-service architecture with 7 distinct components working together",
        "components": [
            {
                "name": "SIH-MainWebsite-Frontend-2025",
                "type": "Web Application",
                "technology": {
                    "framework": "Next.js 14",
                    "language": "TypeScript/JavaScript",
                    "styling": "Tailwind CSS",
                    "stateManagement": "Redux Toolkit",
                    "database": "MongoDB (Mongoose)",
                    "authentication": "JWT with bcrypt"
                }
            },
            {
                "name": "SIH-Contract-2025",
                "type": "Smart Contract",
                "technology": {
                    "language": "Solidity",
                    "framework": "Foundry",
                    "blockchain": "Ethereum (Sepolia testnet)"
                }
            },
            {
                "name": "SIH-Contract-Backend-2025",
                "type": "API Server",
                "technology": {
                    "runtime": "Node.js",
                    "framework": "Express.js",
                    "blockchain": "ethers.js"
                }
            },
            {
                "name": "SIH-Community-2025",
                "type": "Community Portal",
                "technology": {
                    "framework": "Next.js",
                    "language": "TypeScript",
                    "database": "Prisma ORM"
                }
            },
            {
                "name": "SIH-Whiteboard-Frontend-2025",
                "type": "Collaborative Whiteboard",
                "technology": {
                    "framework": "React",
                    "stateManagement": "Redux",
                    "realtime": "Socket.io-client"
                }
            },
            {
                "name": "SIH-Whiteboard-Backend-Socket-2025",
                "type": "Real-time Backend",
                "technology": {
                    "runtime": "Node.js",
                    "framework": "Express.js + Socket.io",
                    "storage": "Cloudinary",
                    "ai": "Google Generative AI"
                }
            },
            {
                "name": "SIH-Whiteboard-Audio-Backend-2025",
                "type": "Audio Processing Backend",
                "technology": {
                    "runtime": "Node.js",
                    "webrtc": "Socket.io for signaling",
                    "transcription": "Google Gemini AI",
                    "storage": "Cloudinary",
                    "summarization": "External API integration"
                }
            }
        ]
    },
