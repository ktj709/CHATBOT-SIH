        "certificateSystem": {
            "description": "Blockchain-based certificate issuance and verification using Ethereum smart contracts",
            "blockchain": {
                "network": "Ethereum Sepolia Testnet",
                "contractName": "CertificateVerification",
                "features": [
                    "Immutable certificate storage on blockchain",
                    "Unique certificate hash enforcement",
                    "College-only issuance authority",
                    "Certificate revocation capability",
                    "Public verification of certificates"
                ]
            },
            "endpoints": [
                {
                    "name": "Issue Certificate",
                    "method": "POST",
                    "path": "/issue-certificate",
                    "description": "Issues a new certificate on the blockchain",
                    "parameters": [
                        "studentIdentifier",
                        "certificateHash",
                        "metadataURI"
                    ],
                    "response": [
                        "txHash",
                        "blockNumber",
                        "certificateId",
                        "gasUsed"
                    ]
                },
                {
                    "name": "Verify Certificate",
                    "method": "GET",
                    "path": "/verify-certificate",
                    "description": "Verifies a certificate by ID or hash",
                    "queryParams": [
                        "certificateId",
                        "certificateHash"
                    ],
                    "response": [
                        "exists",
                        "isValid",
                        "revoked",
                        "studentIdentifier",
                        "issuedAt",
                        "issuerAddress"
                    ]
                },
                {
                    "name": "Revoke Certificate",
                    "method": "POST",
                    "path": "/revoke-certificate",
                    "description": "Revokes an existing certificate",
                    "parameters": [
                        "certificateId"
                    ],
                    "response": [
                        "success",
                        "txHash",
                        "blockNumber"
                    ]
                },
                {
                    "name": "Health Check",
                    "method": "GET",
                    "path": "/health",
                    "description": "Check server and contract status",
                    "response": [
                        "status",
                        "contractAddress",
                        "collegeAddress",
                        "totalCertificates"
                    ]
                }
            ],
            "certificateData": {
                "onChain": [
                    "certificateId",
                    "studentIdentifier",
                    "certificateHash",
                    "metadataURI",
                    "issuedAt",
                    "revoked"
                ],
                "offChain": [
                    "certificateUrl",
                    "issuedBy",
                    "txHash",
                    "blockNumber"
                ]
            }
        },
