        "courseManagement": {
            "description": "Comprehensive course creation, management, and enrollment system",
            "features": [
                {
                    "name": "Course Creation",
                    "details": [
                        "Instructor information capture (name, email, phone)",
                        "Course title and description",
                        "Category selection (Mathematics, Physics, Chemistry, English, Web Development, Designing, AI/ML, Other)",
                        "Difficulty level (Beginner, Intermediate, Advanced)",
                        "Duration specification",
                        "Multi-language support (English, Hindi, Bengali, Marathi, Kannada, Punjabi, Bilingual)",
                        "Prerequisites and learning outcomes",
                        "Automatic tag generation from content",
                        "Draft or Published status"
